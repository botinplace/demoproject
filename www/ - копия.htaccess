	#RewriteRule ^[\/]?imgs\/users_photo\/([0-9]?[0-9]?[0-9]?[0-9]?)\/([0-9]?[0-9]?[0-9]?[0-9]?)\/(.*\.jpg)$ /img.php?path=$1&user_id=$2&src=$3 [L]
