<IfModule mod_rewrite.c>
	
RewriteEngine On

# Если этого фото нет
    #RewriteCond %{REQUEST_FILENAME} !-f
    #RewriteRule \.(jpg|jpeg|png|gif)$ /img/noimg.jpg [NC,L]

##### Редирект с www на без www
RewriteCond %{HTTP_HOST} ^www\.(.+) [NC]
RewriteRule ^(.*)$ http://%1/$1 [L,R=301]

##### Редирект с http на https
#RewriteCond %{HTTPS} off
#RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

##### Убрать слеш в конце
    RewriteBase /mytesproject
    RewriteCond %{REQUEST_URI} .+/$ [NC]
    RewriteCond %{REQUEST_FILENAME} !-d
	#RewriteCond %{REQUEST_URI} !^/admin/?$ [NC]  # игнорируем admin
    RewriteRule ^(.*)/$ /$1 [L,R=301]
 
	RewriteRule ^admin(/.*)?$ admin.php [L]

	RewriteCond %{REQUEST_URI} !^/admin/
    	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
    	RewriteRule ^(.*)$ index.php [L]

	RewriteCond %{REQUEST_URI} ^/admin/
	##RewriteCond %{REQUEST_FILENAME} !-f   #OPTIONAL: Remove '#' if you want existing files to display normally
	##RewriteCond %{REQUEST_FILENAME} !-d   #OPTIONAL: Remove '#' if you want existing files to display normally
	RewriteRule ^(.*)$ admin.php [L,QSA]

	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
	RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
	RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
	RewriteRule ^(.*)$ index.php [F,L]
	
